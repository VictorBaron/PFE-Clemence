{% block title %}
  Supprimer un projet - {{ parent() }}
{% endblock %}

{% block body %}

  <h2>Supprimer un projet</h2>

  <p>
    Etes-vous certain de vouloir supprimer le projet "{{ project.title }}" ?
  </p>

  {# On met l'id de l'annonce dans la route de l'action du formulaire #}
  <form action="{{ path('project_delete', {'id': project.id}) }}" method="post">
    <a href="{{ path('project_view', {'id': project.id}) }}" class="btn btn-default">
      <i class="glyphicon glyphicon-chevron-left"></i>
      Retour au projet.
    </a>
    <input type="submit" value="Supprimer" class="btn btn-danger" />
    {# Ceci va générer le champ CSRF #}
    {{ form_rest(form) }}
  </form>

{% endblock %}