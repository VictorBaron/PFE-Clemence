{% trans_default_domain 'FOSUserBundle' %}

<form action="{{ path("fos_user_security_check") }}" method="post" class="form-login">
			{% if csrf_token %}
					<input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
			{% endif %}

			{% if error %}
				<div class="error-login">{{ "Nom d'utilisateur ou mot de passe incorrect" }}</div>
			{% endif %}

			<input type="text" id="username" name="_username" placeholder="Nom d'utilisateur" value="{{ last_username }}" required="required" />
			
			<input type="password" id="password" name="_password" placeholder="Mot de passe" required="required" />
			
			<!-- <input type="checkbox" id="remember_me" name="_remember_me" value="on" /> -->
			<!--<label for="remember_me">Se souvenir de moi</label> -->

			<input type="submit" id="_submit" name="_submit" value="Connexion" class="bouton"/>
			
      <p class="message">Pas encore de compte ? <a href="/register">Inscription</a></p>
</form>
